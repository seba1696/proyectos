package coleccionvinilos;

import java.util.*;

/**
 *
 * @author sebastian
 */
public class ColeccionVinilos {
   
    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        coleccion c = new coleccion();
        c.agregarVinilo(c.getcolecVinilos(), "Iron Maiden", "Iron Maiden", "1980");
        c.agregarVinilo(c.getcolecVinilos(), "Iron Maiden", "Killers", "1981");
        c.agregarVinilo(c.getcolecVinilos(), "Iron Maiden", "The number of the beast", "1982");
        c.agregarVinilo(c.getcolecVinilos(), "AC-DC", "Back in black", "1980");
        c.agregarVinilo(c.getcolecVinilos(), "AC-DC", "Highway to Hell", "1979");
        c.agregarVinilo(c.getcolecVinilos(), "AC-DC", "Who made who", "1986");
        c.agregarVinilo(c.getcolecVinilos(), "Judas Priest", "British steel", "1980");
        c.agregarVinilo(c.getcolecVinilos(), "Judas Priest", "Painkiller", "1990");
        c.agregarVinilo(c.getcolecVinilos(), "Judas Priest", "Defenders of the faith", "1984");
        c.agregarVinilo(c.getcolecVinilos(), "Kiss", "Destroyer", "1976");
        c.eliminarVinilo(c.getcolecVinilos(), "Kiss");
        c.mostrarColeccion(c.getcolecVinilos());
        System.out.println("Cantidad de vinilos: " + c.getcolecVinilos().size());
        System.out.println("Espacios disponibles: " + (100 - c.getcolecVinilos().size()));
        c.mostrarBusquedaArtista(c.getcolecVinilos(), "Kiss");
        c.mostrarBusquedaArtista(c.getcolecVinilos(), "AC-DC");


    }

  }
